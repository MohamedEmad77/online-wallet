{
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "../",
    "testEnvironment": "node",
    "testRegex": "^.+\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
      "^@core/(.*)$": "<rootDir>/src/core/$1"
    },
    "setupFiles": [
        "reflect-metadata"
      ]
  }